@using System.Collections
@model Entities.Skill
@{
    ViewBag.Title = "Поиск навыка по названию.";
}
    <table class="table">
        <tbody>
            <tr>
                <th style="border-top:none">Название навыка</th>
                <th style="border-top:none">Описание навыка</th>
            </tr>
            @foreach (var skill in (IEnumerable<Entities.Skill>)@ViewData["SearchResults"])
            {
                <tr>
                    <th scope="row">@skill.SkillName</th>
                    <td>@skill.Description</td>
                    <td>
                        <div class="row">
                            <div>
                                @{
                                    if (User.Identity.IsAuthenticated)
                                    {
                                        @Html.ActionLink("Удалить", "RemoveSkill", "Skill", new { skillId = @skill.Id }, new { @class = "action-link delete" })
                                        @Html.ActionLink("Редактировать", "UpdateSkillName", "Skill", new { skillId = @skill.Id }, new { @class = "action-link edit" })
                                    }
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
